<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:padding="10dp" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_task_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task ID:   "
            android:textColor="#005500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_task_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task ID   "
            android:textColor="#000000"
            android:textStyle="italic" />
        
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name:   "
            android:textColor="#005500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_task_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Name     "
            android:textColor="#000000"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_emp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done By: "
            android:textColor="#005500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_emp_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done By"
            android:textColor="#000000"
            android:textStyle="italic" />
    </TableRow>
    
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/label_done_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done Date: "
            android:textColor="#005500"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_done_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done Date"
            android:textColor="#000000"
            android:textStyle="italic" />
    </TableRow>

</TableLayout>